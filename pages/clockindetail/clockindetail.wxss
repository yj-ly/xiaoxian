.clockin_top {
  position: relative;
  height: 527rpx;
}
.study_img {
  width: 100%; 
  height: 527rpx;
}
.clockin_top_tit {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 40rpx 60rpx 52rpx 60rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  height: 230rpx;
  background: #cccccc;
  opacity: .8;
}
.clockin_left .clockin_name{
    font-size: 36rpx;
    color: rgb(0, 0, 0);
}
.clockin_left .start_time,.clockin_left .num {
  font-size: 26rpx;
  color: rgb(0, 0, 0);

}
.clockin_top_right .share {
  display: flex;
  flex-direction: row-reverse;
}
.clockin_left .start_time{
  margin: 40rpx 0 8rpx 0;
}

.clockin_top_right  button[plain] {
  border: none;
  margin: 0;
  font-size: 26rpx;
  color: rgb(0, 0, 0);
  padding: 0;
  display: flex;
   align-items: center;
}
.clockin_top_right .share  image {
  width: 40rpx;
  height: 40rpx;
  margin: 0 0 0 10rpx;
}

.participation  {
  display: flex;
  margin: 50rpx 0 0 0;
}
.participation view {
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  border:2rpx solid #ffffff;
  background: #7f7f7f;
  margin: 0 0 0 -17rpx;
}
