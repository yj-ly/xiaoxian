            </view>
          </view>
          <view class='discounts_list_right'>
            <image src='/pages/imgs/unselected_discounts.png' wx:if="{{item.selectBoole == false}}"></image>
            <image src='/pages/imgs/discounts_select.png' wx:else></image>
          </view>
        </view>

