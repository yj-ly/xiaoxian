        </view>

      </view>


      <!-- 优惠券选择 -->
      <view class='discounts_list_con' bindtap='showDiscountChange'>
        <view class='discounts_txt'>优惠券选择</view>
        <view class='discounts_change'>
          {{list.length}}张可用
          <image src='/pages/imgs/more.png'></image>
        </view>
      </view>

      <!-- 计算要支付的价格 -->
      <view class='pay_item_con'>
        <view class='pay_item'>
          <text>产品金额</text>
          <view class='pay_item_money'>￥ {{detailMsg.money}}</view>
        </view>
        <view class='pay_item'>
          <text>优惠抵扣</text>
          <view class='pay_item_money'>-￥ {{deductionMoney}}</view>
        </view>
        <view class='pay_item'>
          <text>实付金额</text>
          <view class='pay_item_money'>￥ {{payModel.money}}</view>
        </view>
      </view>

      <!-- 支付btn -->
      <view class='pay_btn'>
        <button bindtap='pay'>去付款</button>
      </view>
    </view>
