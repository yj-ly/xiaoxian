}

.commodity_con_left image {
  width: 233rpx;
  height: 116rpx;
  margin: 0 39rpx 0 0;
}

.commodity_con_right .commodity_txt {
  font-size: 25rpx;
  color: #000;
  line-height: 40rpx;
  margin-bottom: 29rpx;
